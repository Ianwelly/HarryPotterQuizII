<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/parchment"
        android:orientation="vertical"
        tools:context="com.example.android.harrypotterquizii.FirstQuestionsPageActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:text="@string/question_1"
            android:textSize="@dimen/question_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:text="@string/Question_1"
            android:textSize="@dimen/text_size" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <RadioButton
                android:id="@+id/correct_answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage1"
                android:text="@string/_11_o_clock" />

            <RadioButton
                android:id="@+id/incorrect_answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage1"
                android:text="@string/_9_o_clock" />

            <RadioButton
                android:id="@+id/incorrect_answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage1"
                android:text="@string/midday" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:layout_marginTop="8dp"
            android:text="@string/question_2"
            android:textSize="@dimen/question_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:text="@string/question2"
            android:textSize="@dimen/text_size" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <RadioButton
                android:id="@+id/incorrect_answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage2"
                android:text="@string/_2" />

            <RadioButton
                android:id="@+id/incorrect_answer_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage2"
                android:text="@string/_3" />

            <RadioButton
                android:id="@+id/correct_answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage2"
                android:text="@string/_1" />

        </RadioGroup>

        <!-- Question 3 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:layout_marginTop="8dp"
            android:text="@string/question_3"
            android:textSize="@dimen/question_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:text="@string/question3"
            android:textSize="@dimen/text_size" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <RadioButton
                android:id="@+id/incorrect_answer_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage3"
                android:text="@string/dave" />

            <RadioButton
                android:id="@+id/incorrect_answer_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage3"
                android:text="@string/scabbers" />

            <RadioButton
                android:id="@+id/correct_answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage3"
                android:text="@string/najini" />

        </RadioGroup>

        <!-- Question 4 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:layout_marginTop="8dp"
            android:text="@string/question_4"
            android:textSize="@dimen/question_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_view_checkbox_margin"
            android:text="@string/question4"
            android:textSize="@dimen/text_size" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <RadioButton
                android:id="@+id/incorrect_answer_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage4"
                android:text="@string/_4" />

            <RadioButton
                android:id="@+id/correct_answer_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage4"
                android:text="@string/_7" />

            <RadioButton
                android:id="@+id/correct_answer_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toastMessage4"
                android:text="@string/_10" />

        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/enter_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:onClick="second_question_page"
                android:text="@string/QuestionPage_One_Enter_Button"
                android:textSize="@dimen/button_text_size" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>